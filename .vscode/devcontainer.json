{
    "name": "Arkalia-LUNA Development Environment",
    "image": "python:3.11-slim",
    "features": {
        "ghcr.io/devcontainers/features/python:1": {
            "version": "3.11"
        },
        "ghcr.io/devcontainers/features/git:1": {},
        "ghcr.io/devcontainers/features/github-cli:1": {}
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "charliermarsh.ruff",
                "ms-python.black-formatter",
                "ms-python.pyright",
                "ms-python.isort",
                "usernamehw.errorlens",
                "aaron-bond.better-comments",
                "oderwat.indent-rainbow",
                "ms-vscode.vscode-json",
                "yzhang.markdown-all-in-one",
                "ms-vscode.vscode-yaml",
                "redhat.vscode-yaml",
                "ms-vscode.vscode-toml",
                "ms-azuretools.vscode-docker",
                "humao.rest-client",
                "ms-vscode.vscode-github",
                "ms-vscode.vscode-git",
                "ms-vscode.vscode-git-graph",
                "ms-vscode.vscode-gitlens",
                "ms-vscode.vscode-gitignore",
                "bierner.markdown-mermaid",
                "shd101wyy.markdown-preview-enhanced",
                "zhuangtongfa.material-theme",
                "pkief.material-icon-theme",
                "ms-python.fastapi",
                "ms-python.pytest-adapter",
                "ms-python.coverage-gutters",
                "ms-vscode.vscode-bandit"
            ]
        }
    },
    "postCreateCommand": "pip install --upgrade pip && pip install -r requirements.txt",
    "remoteUser": "vscode",
    "mounts": [
        "source=${localWorkspaceFolder}/.venv,target=/workspaces/arkalia-luna-pro/.venv,type=bind,consistency=cached"
    ],
    "workspaceMount": "source=${localWorkspaceFolder},target=/workspaces/arkalia-luna-pro,type=bind,consistency=cached",
    "workspaceFolder": "/workspaces/arkalia-luna-pro"
}
