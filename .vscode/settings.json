{
    "python.defaultInterpreterPath": "/Volumes/T7/arkalia-luna-venv/bin/python",
    "python.terminal.activateEnvironment": true,
    "python.analysis.extraPaths": [
        "./modules",
        "./utils",
        "./utils_enhanced"
    ],
    "python.analysis.typeCheckingMode": "basic",
    "python.analysis.reportMissingParameterType": false,
    "python.analysis.reportUnknownVariableType": false,
    "python.analysis.reportUnknownParameterType": false,
    "python.analysis.reportMissingTypeArgument": false,
    "python.analysis.reportUnusedImport": "warning",
    "python.analysis.reportUnusedClass": "warning",
    "python.analysis.reportUnusedFunction": "warning",
    "python.analysis.reportDuplicateImport": "warning",
    "python.analysis.reportOptionalSubscript": false,
    "python.analysis.reportOptionalMemberAccess": false,
    "python.analysis.reportOptionalIterable": false,
    "python.analysis.reportOptionalContextManager": false,
    "python.analysis.reportOptionalOperand": false,
    "python.linting.enabled": true,
    "python.linting.pylintEnabled": false,
    "python.linting.flake8Enabled": false,
    "python.linting.mypyEnabled": true,
    "python.linting.ruffEnabled": true,
    "python.linting.ruffArgs": [
        "--config=pyproject.toml"
    ],
    "python.formatting.provider": "black",
    "python.formatting.blackArgs": [
        "--config=pyproject.toml"
    ],
    "editor.formatOnSave": false,
    "editor.codeActionsOnSave": {
        "source.organizeImports": "explicit",
        "source.fixAll": "explicit"
    },
    "workbench.colorTheme": "One Dark Pro",
    "workbench.iconTheme": "material-icon-theme",
    "editor.fontFamily": "Fira Code, Menlo, 'Courier New', monospace",
    "editor.fontSize": 15,
    "editor.lineHeight": 22,
    "editor.fontLigatures": true,
    "editor.rulers": [
        88
    ],
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.detectIndentation": false,
    "editor.wordWrap": "on",
    "editor.wordWrapColumn": 100,
    "editor.minimap.enabled": false,
    "editor.renderWhitespace": "boundary",
    "editor.cursorSmoothCaretAnimation": "on",
    "editor.smoothScrolling": true,
    "editor.bracketPairColorization.enabled": true,
    "editor.guides.bracketPairs": "active",
    "editor.lineNumbers": "on",
    "editor.cursorBlinking": "smooth",
    "editor.cursorWidth": 2,
    "files.autoSave": "afterDelay",
    "files.autoSaveDelay": 1000,
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,
    "files.exclude": {
        "**/__pycache__": true,
        "**/.mypy_cache": true,
        "**/.pytest_cache": true,
        "**/*.pyc": true,
        "**/.DS_Store": true,
        "**/._*": true
    },
    "terminal.integrated.env.osx": {
        "PYTHONPATH": "${workspaceFolder}/modules:${workspaceFolder}/scripts"
    },
    "terminal.integrated.cwd": "${workspaceFolder}",
    "terminal.integrated.fontSize": 14,
    "terminal.integrated.defaultProfile.osx": "zsh",
    "terminal.integrated.fontFamily": "Fira Code",
    "terminal.integrated.fontLigatures": true,
    "terminal.integrated.inheritEnv": true,
    "python.testing.pytestEnabled": true,
    "python.testing.unittestEnabled": false,
    "python.testing.pytestArgs": [
        "tests",
        "-v",
        "--tb=short",
        "--maxfail=2",
        "--disable-warnings"
    ],
    "files.associations": {
        "*.toml": "toml",
        "*.yml": "yaml",
        "*.yaml": "yaml"
    },
    "search.exclude": {
        "**/__pycache__": true,
        "**/venv": true,
        "**/.venv": true,
        "**/generated": true,
        "**/node_modules": true,
        "**/.git": true,
        "**/logs": true,
        "**/cache": true,
        "**/state": true,
        "**/htmlcov": true,
        "**/benchmark_results": true
    },
    "files.watcherExclude": {
        "**/__pycache__/**": true,
        "**/venv/**": true,
        "**/.venv/**": true,
        "**/generated/**": true,
        "**/logs/**": true,
        "**/cache/**": true,
        "**/state/**": true,
        "**/htmlcov/**": true,
        "**/benchmark_results/**": true
    },
    "extensions.ignoreRecommendations": false,
    "python.analysis.autoImportCompletions": true,
    "python.analysis.autoSearchPaths": true,
    "python.terminal.executeInFileDir": true,
    "python.terminal.activateEnvInCurrentTerminal": true,
    "git.enableSmartCommit": true,
    "git.confirmSync": false,
    "git.autofetch": true,
    "python.linting.ignorePatterns": [
        "**/demo_*.py",
        "**/arkalia_enhanced_integration.py",
        "**/ark-master-*.py",
        "**/test_*.py"
    ],
    "editor.suggestSelection": "first",
    "editor.acceptSuggestionOnCommitCharacter": false,
    "editor.acceptSuggestionOnEnter": "on",
    "editor.quickSuggestions": {
        "other": true,
        "comments": false,
        "strings": true
    },
    "editor.parameterHints.enabled": true,
    "editor.hover.enabled": true,
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true
}
