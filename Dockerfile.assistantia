# ü§ñ Dockerfile.assistantia - AssistantIA Optimis√©
# Stage 1: Builder
FROM python:3.10-slim as builder

ENV PYTHONUNBUFFERED=1
ENV PYTHONDONTWRITEBYTECODE=1
ENV PIP_NO_CACHE_DIR=1

# Installation des outils de build
RUN apt-get update && apt-get install -y --no-install-recommends \
    gcc \
    && rm -rf /var/lib/apt/lists/*

# Cr√©ation d'un environnement virtuel
RUN python -m venv /opt/venv
ENV PATH="/opt/venv/bin:$PATH"

# Installation des d√©pendances
COPY requirements.txt .
RUN pip install --upgrade pip && \
    pip install --no-cache-dir -r requirements.txt

# Stage 2: Runtime
FROM python:3.10-slim as runtime

# M√©tadonn√©es
LABEL maintainer="Athalia <athalia@arkalia.ai>"
LABEL description="AssistantIA - Navigation Contextuelle"
LABEL version="2.6.0"

# Variables d'environnement
ENV PYTHONUNBUFFERED=1
ENV PYTHONDONTWRITEBYTECODE=1
ENV PATH="/opt/venv/bin:$PATH"
ENV PYTHONPATH=/app
ENV ASSISTANTIA_ENV=production

# Cr√©ation utilisateur non-root
RUN groupadd -r assistantia && \
    useradd -r -g assistantia -d /app -s /bin/bash assistantia && \
    mkdir -p /app/logs /app/state && \
    chown -R assistantia:assistantia /app

# Copie du venv
COPY --from=builder /opt/venv /opt/venv

WORKDIR /app

# Copie s√©lective du code
COPY --chown=assistantia:assistantia modules/assistantia ./modules/assistantia
COPY --chown=assistantia:assistantia modules/monitoring ./modules/monitoring
COPY --chown=assistantia:assistantia modules/utils_enhanced ./modules/utils_enhanced
COPY --chown=assistantia:assistantia modules/__init__.py ./modules/
COPY --chown=assistantia:assistantia config ./config
COPY --chown=assistantia:assistantia state ./state

# Switch vers utilisateur non-root
USER assistantia

# Healthcheck am√©lior√©
HEALTHCHECK --interval=30s --timeout=5s --start-period=20s --retries=3 \
    CMD python -c "import requests; requests.get('http://localhost:8001/health', timeout=3)" || exit 1

# Port expos√©
EXPOSE 8001

# Point d'entr√©e optimis√©
CMD ["uvicorn", "modules.assistantia.core:app", "--host", "0.0.0.0", "--port", "8001", \
    "--workers", "1", "--access-log", "--log-level", "info"]
