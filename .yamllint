extends: default

rules:
  # Désactiver certaines règles trop strictes pour GitHub Actions
  line-length:
    max: 120
    level: warning
  document-start: enable
  truthy: disable
  brackets:
    min-spaces-inside: 0
    max-spaces-inside: 1
  comments-indentation: disable
  indentation:
    spaces: 2
    indent-sequences: true
  trailing-spaces: enable
  empty-lines:
    max: 1
    max-end: 1
  commas:
    min-spaces-after: 1
  colons:
    max-spaces-after: 1
  key-duplicates: enable
  new-line-at-end-of-file: enable
  new-lines:
    type: unix
